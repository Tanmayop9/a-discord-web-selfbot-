<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Message Templates - Discord Web Selfbot</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  <nav>
    <div class="nav-content">
      <a href="/" class="nav-brand">ğŸ® Discord Selfbot</a>
      <ul class="nav-links">
        <li><a href="/">Dashboard</a></li>
        <li><a href="/templates">ğŸ“ Templates</a></li>
        <li><a href="/search">ğŸ” Search</a></li>
        <li><a href="/multi-account">ğŸ‘¥ Multi-Account</a></li>
      </ul>
      <div class="user-info">
        <img src="<%= user.displayAvatarURL({ dynamic: true }) %>" alt="<%= user.tag %>" class="user-avatar">
        <span><%= user.tag %></span>
      </div>
    </div>
  </nav>

  <div class="container fade-in">
    <div class="card-enhanced">
      <div class="card-header">ğŸ“ Create Message Template</div>
      
      <form onsubmit="event.preventDefault(); addTemplate();">
        <div class="grid grid-2">
          <div class="form-group">
            <label class="form-label">Template Name</label>
            <input type="text" class="form-control" id="name" placeholder="Welcome Message" required>
          </div>
          
          <div class="form-group">
            <label class="form-label">Category</label>
            <select class="form-control" id="category">
              <option value="general">General</option>
              <option value="announcement">Announcement</option>
              <option value="welcome">Welcome</option>
              <option value="custom">Custom</option>
            </select>
          </div>
        </div>
        
        <div class="form-group">
          <label class="form-label">Template Content</label>
          <textarea class="form-control" id="content" rows="6" placeholder="Enter your message template..." required></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary">ğŸ’¾ Save Template</button>
      </form>
    </div>

    <div class="card-enhanced">
      <div class="card-header">ğŸ“‹ Your Templates (<%= templates.length %>)</div>
      
      <div class="grid grid-2">
        <% templates.forEach(template => { %>
        <div class="card glass">
          <div class="flex-between">
            <div style="flex: 1;">
              <h3><%= template.name %></h3>
              <p class="chip"><%= template.category %></p>
              <p style="color: var(--text-secondary); margin-top: 10px; white-space: pre-wrap;"><%= template.content %></p>
              <p style="color: var(--text-muted); font-size: 0.85rem; margin-top: 8px;">
                Used <%= template.uses %> times
              </p>
            </div>
          </div>
          <div class="flex gap-1" style="margin-top: 15px;">
            <button class="btn btn-sm btn-primary" onclick="useTemplate(<%= template.id %>)">Use</button>
            <button class="btn btn-sm btn-danger" onclick="deleteTemplate(<%= template.id %>)">Delete</button>
          </div>
        </div>
        <% }); %>
      </div>
      
      <% if (templates.length === 0) { %>
      <p class="text-center" style="color: var(--text-muted); padding: 40px;">
        No templates created yet. Create your first template above!
      </p>
      <% } %>
    </div>
  </div>

  <script src="/js/app.js"></script>
  <script>
    async function addTemplate() {
      const name = document.getElementById('name').value;
      const content = document.getElementById('content').value;
      const category = document.getElementById('category').value;
      
      try {
        await apiCall('/templates/add', 'POST', { name, content, category });
        showNotification('Template saved!', 'success');
        setTimeout(() => location.reload(), 1000);
      } catch (error) {
        // Error already shown
      }
    }
    
    async function useTemplate(id) {
      const channelId = prompt('Enter channel ID:');
      if (!channelId) return;
      
      try {
        await apiCall('/templates/use', 'POST', { id, channelId });
        showNotification('Template sent!', 'success');
      } catch (error) {
        // Error already shown
      }
    }
    
    async function deleteTemplate(id) {
      if (!confirm('Delete this template?')) return;
      
      try {
        await apiCall('/templates/delete', 'POST', { id });
        showNotification('Template deleted!', 'success');
        setTimeout(() => location.reload(), 1000);
      } catch (error) {
        // Error already shown
      }
    }
  </script>
</body>
</html>
