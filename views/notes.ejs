<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notes - Discord Web Selfbot</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  <nav>
    <div class="nav-content">
      <a href="/" class="nav-brand">üéÆ Discord Selfbot</a>
      <ul class="nav-links">
        <li><a href="/">Dashboard</a></li>
        <li><a href="/notes">Notes</a></li>
      </ul>
      <div class="user-info">
        <img src="<%= user.displayAvatarURL({ dynamic: true }) %>" alt="<%= user.tag %>" class="user-avatar">
        <span><%= user.tag %></span>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="card">
      <div class="card-header">üìù User Notes</div>
      
      <div class="grid grid-2">
        <% notes.forEach(note => { %>
        <div class="card">
          <div class="flex gap-2">
            <img src="<%= note.avatar %>" alt="<%= note.username %>" style="width: 40px; height: 40px; border-radius: 50%;">
            <div style="flex: 1;">
              <h4><%= note.username %></h4>
              <p style="color: var(--text-secondary); margin-top: 10px;">
                <%= note.note %>
              </p>
              <button class="btn btn-sm btn-primary mt-1" onclick="editNote('<%= note.userId %>', '<%= note.note.replace(/'/g, "\\'") %>')">Edit</button>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      
      <% if (notes.length === 0) { %>
      <p class="text-center" style="color: var(--text-muted); padding: 40px;">
        No notes saved yet.
      </p>
      <% } %>
    </div>
  </div>

  <script src="/js/app.js"></script>
  <script>
    function editNote(userId, currentNote) {
      const newNote = prompt('Edit note:', currentNote);
      if (newNote !== null) {
        setNote(userId, newNote).then(success => {
          if (success) {
            setTimeout(() => location.reload(), 1000);
          }
        });
      }
    }
  </script>
</body>
</html>
