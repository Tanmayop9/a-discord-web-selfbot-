<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Backup Manager - Discord Web Selfbot</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  <nav>
    <div class="nav-content">
      <a href="/" class="nav-brand">ğŸ® Discord Selfbot</a>
      <ul class="nav-links">
        <li><a href="/">Dashboard</a></li>
        <li><a href="/backup-manager">ğŸ’¾ Backups</a></li>
        <li><a href="/settings">âš™ï¸ Settings</a></li>
      </ul>
      <div class="user-info">
        <img src="<%= user.displayAvatarURL({ dynamic: true }) %>" alt="<%= user.tag %>" class="user-avatar">
        <span><%= user.tag %></span>
      </div>
    </div>
  </nav>

  <div class="container fade-in">
    <div class="card-enhanced">
      <div class="card-header">ğŸ’¾ Create Backup</div>
      
      <form onsubmit="event.preventDefault(); createBackup();">
        <div class="form-group">
          <label class="form-label">Backup Name</label>
          <input type="text" class="form-control" id="backupName" placeholder="My Settings Backup" required>
        </div>
        
        <div class="form-group">
          <label class="form-label">Backup Type</label>
          <select class="form-control" id="backupType">
            <option value="all">All Settings</option>
            <option value="autoresponders">Auto-Responders Only</option>
            <option value="commands">Custom Commands Only</option>
            <option value="templates">Message Templates Only</option>
          </select>
        </div>
        
        <button type="submit" class="btn btn-primary">ğŸ’¾ Create Backup</button>
      </form>
    </div>

    <div class="card-enhanced">
      <div class="card-header">ğŸ“¦ Your Backups (<%= backups.length %>)</div>
      
      <div class="grid grid-2">
        <% backups.forEach(backup => { %>
        <div class="card glass">
          <h3><%= backup.name %></h3>
          <p style="color: var(--text-muted); font-size: 0.9rem;">
            Created: <%= new Date(backup.created).toLocaleString() %>
          </p>
          <div class="flex gap-1" style="margin-top: 15px;">
            <button class="btn btn-sm btn-success" onclick="restoreBackup(<%= backup.id %>)">Restore</button>
            <button class="btn btn-sm btn-secondary" onclick="downloadBackup(<%= backup.id %>)">Download</button>
            <button class="btn btn-sm btn-danger" onclick="deleteBackup(<%= backup.id %>)">Delete</button>
          </div>
        </div>
        <% }); %>
      </div>
      
      <% if (backups.length === 0) { %>
      <p class="text-center" style="color: var(--text-muted); padding: 40px;">
        No backups created yet. Create your first backup above!
      </p>
      <% } %>
    </div>

    <div class="alert alert-info">
      â„¹ï¸ <strong>Tip:</strong> Regular backups help you restore your settings if something goes wrong.
      Backups are stored locally in memory and will be lost if the server restarts.
    </div>
  </div>

  <script src="/js/app.js"></script>
  <script>
    async function createBackup() {
      const name = document.getElementById('backupName').value;
      const type = document.getElementById('backupType').value;
      
      const data = {
        type,
        autoresponders: [],
        commands: [],
        templates: [],
        settings: {}
      };
      
      try {
        await apiCall('/backup-manager/save', 'POST', { name, data: JSON.stringify(data) });
        showNotification('Backup created!', 'success');
        setTimeout(() => location.reload(), 1000);
      } catch (error) {
        // Error already shown
      }
    }
    
    async function restoreBackup(id) {
      if (!confirm('Restore this backup? Current settings will be overwritten.')) return;
      
      try {
        await apiCall('/backup-manager/restore', 'POST', { id });
        showNotification('Backup restored!', 'success');
        setTimeout(() => location.reload(), 1000);
      } catch (error) {
        // Error already shown
      }
    }
    
    function downloadBackup(id) {
      showNotification('Download feature coming soon!', 'info');
    }
    
    async function deleteBackup(id) {
      if (!confirm('Delete this backup?')) return;
      
      try {
        await apiCall('/backup-manager/delete', 'POST', { id });
        showNotification('Backup deleted!', 'success');
        setTimeout(() => location.reload(), 1000);
      } catch (error) {
        // Error already shown
      }
    }
  </script>
</body>
</html>
