<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Webhooks - Discord Web Selfbot</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  <nav>
    <div class="nav-content">
      <a href="/" class="nav-brand">üéÆ Discord Selfbot</a>
      <ul class="nav-links">
        <li><a href="/">Dashboard</a></li>
        <li><a href="/servers">Servers</a></li>
        <li><a href="/server/<%= guild.id %>">‚Üê Back to Server</a></li>
      </ul>
      <div class="user-info">
        <img src="<%= user.displayAvatarURL({ dynamic: true }) %>" alt="<%= user.tag %>" class="user-avatar">
        <span><%= user.tag %></span>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="card">
      <div class="card-header">ü™ù Webhooks for <%= guild.name %></div>
      
      <div class="grid grid-2">
        <% webhooks.forEach(wh => { %>
        <div class="card">
          <div class="flex gap-2">
            <img src="<%= wh.avatar %>" alt="<%= wh.name %>" style="width: 40px; height: 40px; border-radius: 50%;">
            <div style="flex: 1;">
              <h4><%= wh.name %></h4>
              <p style="color: var(--text-secondary); font-size: 0.9rem;">
                ID: <%= wh.id %><br>
                Channel: <%= wh.channelId %>
              </p>
              <button class="btn btn-sm btn-primary" onclick="copyToClipboard('<%= wh.url %>')">Copy URL</button>
              <button class="btn btn-sm btn-danger" onclick="deleteWebhookConfirm('<%= wh.id %>')">Delete</button>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      
      <% if (webhooks.length === 0) { %>
      <p class="text-center" style="color: var(--text-muted); padding: 40px;">
        No webhooks found in this server.
      </p>
      <% } %>
    </div>
  </div>

  <script src="/js/app.js"></script>
  <script>
    async function deleteWebhookConfirm(webhookId) {
      if (!confirm('Are you sure you want to delete this webhook?')) {
        return;
      }
      
      try {
        await apiCall('/delete-webhook', 'POST', { webhookId });
        showNotification('Webhook deleted!', 'success');
        setTimeout(() => location.reload(), 1000);
      } catch (error) {
        // Error already shown
      }
    }
  </script>
</body>
</html>
